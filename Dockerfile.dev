# Development Dockerfile with hot reload
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies for development
RUN apk add --no-cache git

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Set environment variables
ENV NODE_ENV=development
ENV PORT=3000
ENV VITE_PORT=5173

# Expose ports for both server and client
EXPOSE 3000 5173

# Create startup script
RUN echo '#!/bin/sh\n\
echo "Starting Dewu Mock API in development mode..."\n\
echo "Server will be available at http://localhost:3000"\n\
echo "Client will be available at http://localhost:5173"\n\
npm run dev' > /app/start-dev.sh && chmod +x /app/start-dev.sh

# Start development server
CMD ["/app/start-dev.sh"]