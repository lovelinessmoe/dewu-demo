# Dewu Mock API - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...your-anon-key

# Server Configuration (Optional)
PORT=3000
NODE_ENV=development

# CORS Configuration (Optional)
CORS_ORIGIN=*

# Mock Data Configuration (Optional)
MOCK_DATA_PATH=./src/server/data
STATIC_PATH=./dist/client

# Logging (Optional)
LOG_LEVEL=info

# Response Configuration (Optional)
RESPONSE_DELAY=100
ERROR_RATE=0.02

# Token Configuration (Optional)
TOKEN_EXPIRATION=7200
REFRESH_TOKEN_EXPIRATION=2592000

# JWT Configuration (for stateless token management)
# IMPORTANT: Change this secret in production! Use a strong random string (min 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ACCESS_TOKEN_EXPIRY=1h
JWT_REFRESH_TOKEN_EXPIRY=30d

# Pagination (Optional)
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=20